<Window x:Class="IShow.ChooseDishes.View.OrgTable.OrgLocation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding OrgLocatin, Source={StaticResource ViewModelLocator}}"
        Title="区域设置" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid  AutoGenerateColumns="False" ItemsSource="{Binding Locations}" SelectedItem="{Binding SelectedLocations}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="80" Header="编号" Binding="{Binding LocationId}"/>
                <DataGridTextColumn Width="80" Header="编码" Binding="{Binding Code}"/>
                <DataGridTextColumn Width="80" Header="区域名字" Binding="{Binding Name}"/>
            </DataGrid.Columns>

        </DataGrid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="10">
                <Button Width="100" Margin="0,0,10,0" Command="{Binding Add}" Content="新增"/>
                <Button Width="100" Margin="0,0,10,0" Command="{Binding Edit}" Content="修改"/>
                <Button Width="100" Margin="0,0,10,0" Command="{Binding Delete}" Content="删除"/>
                <Button Width="100" Margin="0,0,10,0"  Content="退出" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

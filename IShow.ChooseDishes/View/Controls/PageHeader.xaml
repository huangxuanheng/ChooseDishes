<UserControl x:Class="IShow.ChooseDishes.View.Controls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Background="#ff254c6d"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Height="33">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/IShow.ChooseDishes;component/Image/Login/LOGO.png" />
                <TextBlock Foreground="White" Margin="10,0,0,3" VerticalAlignment="Center" Text="惠员餐饮管理系统"/>
            </StackPanel>
        </Grid>
        <Button Grid.Column="1" Content="退出" Background="Transparent" Foreground="White" Width="40" Height="30" HorizontalAlignment="Right"
                    Margin="0,0,10,0" Click="OnCloseClick"/>
    </Grid>
</UserControl>

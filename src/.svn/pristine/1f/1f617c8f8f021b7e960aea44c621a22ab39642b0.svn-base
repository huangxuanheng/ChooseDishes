<Window x:Class="IShow.ChooseDishes.View.DishesMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:vn="clr-namespace:IShow.ChooseDishes.ViewModel"
        DataContext="{Binding DishesMenu, Source={StaticResource ViewModelLocator}}"
        Title="菜牌管理" Height="600.788" Width="910.075">
    <Window.Resources>
        <HierarchicalDataTemplate x:Key="TreeNodeTemplate" DataType="{x:Type vn:TreeNode}" ItemsSource="{Binding Children}">
            <StackPanel x:Name="TreeNodeStackPanel"  Orientation="Horizontal" Margin="2">
                <ContentPresenter  Content="{Binding Path=Name,Mode=OneTime}" Margin="2,0"/>
            </StackPanel>
        </HierarchicalDataTemplate>
        <Style x:Key="TreeNodeStyle" TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="IsSelected" Value="{Binding Selected}" />
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="206*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top" Height="63" Width="899" Grid.ColumnSpan="2">
            <Button Content="新增类型" Height="58" VerticalAlignment="Top" Width="75" Command="{Binding AddCommand}"/>
            <Button Content="选择菜品" Height="58" VerticalAlignment="Top" Width="75"/>
            <Button Content="删除菜品" Height="58" VerticalAlignment="Top" Width="75"/>
            <Button Content="退出" Height="58" VerticalAlignment="Top" Width="75"/>
        </ToolBar>
        <TreeView HorizontalAlignment="Left" Height="500" Margin="0,68,0,0" VerticalAlignment="Top" Width="222" ItemTemplate="{StaticResource TreeNodeTemplate}" ItemContainerStyle="{StaticResource TreeNodeStyle}" ItemsSource="{Binding DishesMenu}"/>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding DishesMenuItems}" HorizontalAlignment="Left" Margin="227,68,0,0" VerticalAlignment="Top" Height="503" Width="672" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="40" ClipboardContentBinding="{x:Null}" Header="行号"/>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="160"  ClipboardContentBinding="{x:Null}" Header="菜谱类型"/>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="100" ClipboardContentBinding="{x:Null}" Header="菜品编号"/>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="80" ClipboardContentBinding="{x:Null}" Header="品名"/>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="100" ClipboardContentBinding="{x:Null}" Header="规格"/>
                <DataGridTextColumn Binding="{Binding Path=Index}" Width="80" ClipboardContentBinding="{x:Null}" Header="单位"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
